<!-- （全部のユーザーが投稿した）本の一覧ページ -->

  <div>
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
  </div>

  <div class="content-box row">
    <div class="sidebar-box col-md-4">
      <div table-responsive>
        <h1>User info</h1>
        <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
        <table class="table">
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
        <div class="edit-button">
          <%= link_to "", edit_user_path(@user), class: "glyphicon glyphicon-wrench color-black" %>
        </div>
      </div>

      <div>
        <h1>New book</h1>
        <%= form_for (@book) do |f| %>
        <p>Title</p>
        <%= f.text_field :title, class: "textarea" %>

        <p>Opinion</p>
        <%= f.text_area :body, class: "textarea" %>

        <%= f.submit 'Create Book', class: "btn btn-success btn-block" %>

        <% end %>
      </div>
    </div>


    <div class="col-md-8 table-responsive">
      <h1>Books</h1>
      <table class="table">
        <tr>
          <th>     </th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      <% @users.each do |user| %>
      <% user.books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      <% end %>
      </table>
    </div>
  </div>

<!-- userの一覧ページ -->
<div class="content-box row">
  <div class="sidebar-box col-md-4">
    <div>
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
      <table class="table">
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
      </table>
      <div class="edit-button">
        <%= link_to "", edit_user_path(@user), class: "glyphicon glyphicon-wrench color-black" %>
      </div>
    </div>

    <div>
      <h1>New book</h1>
      <%= form_for (@book) do |f| %>
      <p>Title</p>
      <%= f.text_field :title, class: "textarea" %>

      <p>Opinion</p>
      <%= f.text_area :body, class: "textarea" %>

      <%= f.submit 'Create Book', class: "btn btn-success btn-block" %>

      <% end %>
    </div>
  </div>



  <div class="col-md-8 table-responsive">
    <h1>Users</h1>
    <table class="table">
      <tr>
        <th>image</th>
        <th>name</th>
      </tr>
    <% @users.each do |f| %>
      <tr>
        <td><%= attachment_image_tag f, :profile_image, fallback:"no_image.jpg", size:"60x60" %></td>
        <td><%= f.name %></td>
        <td><%= link_to "Show", user_path(f.id) %>
      </tr>
    <% end %>
    </table>
  </div>
</div>

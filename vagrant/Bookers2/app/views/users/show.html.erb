<!-- userの詳細ページ -->
<main>
  <div>
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
  </div>

<div class="content-box row">
  <div class="sidebar-box col-md-4">
    <div>
      <h1>User info</h1>
      <div>
        <%= attachment_image_tag @user, :profile_image, fallback:"no_image.jpg", size:"60x60" %>
      </div>
      <table class="table">
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
      <div class="edit-button">
        <%= link_to "", edit_user_path(@user), class: "glyphicon glyphicon-wrench color-black" %>
      </div>
    </div>

    <div>
      <h1>New book</h1>
      <%= form_for @book do |f| %>
      <p>Title</p>
      <%= f.text_field :title, class: "textarea" %>

      <p>Opinion</p>
      <%= f.text_area :body, class: "textarea" %>

      <%= f.submit 'Create Book', class: "btn btn-success btn-block" %>

      <% end %>
    </div>
  </div>

  <div class="book-box col-md-8 table-responsive">
    <h1>Books</h1>
    <table class="table">
        <tr>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      <% @books.each do |f| %>
        <tr>
          <% if f.user == @user %>
          <td><%= link_to f.title, book_path(f.id) %></td>
          <td><%= f.body %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>

</main>
